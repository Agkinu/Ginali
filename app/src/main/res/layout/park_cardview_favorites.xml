<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        app:cardBackgroundColor="@color/AliceBlue"
        app:cardCornerRadius="25dp"
        app:cardElevation="12dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/textViewParkAddress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/imageViewParkFav"
                android:layout_centerHorizontal="true"
                android:layout_margin="8dp"
                android:gravity="center"
                android:text="Park Address"
                android:textAlignment="center"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/textViewParkName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_margin="8dp"
                android:text="Park Name"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/imageViewParkFav"
                android:layout_width="400dp"
                android:layout_height="250dp"
                android:layout_below="@+id/textViewParkName"
                android:layout_centerHorizontal="true"
                android:layout_margin="8dp"
                app:srcCompat="@drawable/park_pic" />
        </RelativeLayout>
    </android.support.v7.widget.CardView>


</RelativeLayout>